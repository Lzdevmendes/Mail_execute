[build]
builder = "dockerfile"

[deploy]
healthcheckPath = "/health"
healthcheckTimeout = 300
restartPolicyType = "on_failure"
restartPolicyMaxRetries = 3

[env]
ENVIRONMENT = "production"
DEBUG = "false"
LOG_LEVEL = "INFO"
PYTHONPATH = "/app"
MODEL_CACHE_DIR = "/tmp/models_cache"
UPLOAD_DIR = "/tmp/uploads"
LOG_FILE = "/tmp/logs/app.log"