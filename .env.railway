# Railway Production Environment Configuration
# These variables will be set in Railway dashboard

# Application Settings
APP_NAME=Mailexecute
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Settings (Railway will set PORT automatically)
HOST=0.0.0.0
RELOAD=false

# AI Model Settings
MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
MODEL_CACHE_DIR=/tmp/models_cache
MAX_LENGTH=512

# File Upload Settings (Railway limits)
MAX_FILE_SIZE=5242880  # 5MB for Railway free plan
UPLOAD_DIR=/tmp/uploads

# Processing Settings
MIN_CONTENT_LENGTH=10
MAX_CONTENT_LENGTH=8000  # Reduced for Railway memory limits
DEFAULT_CONFIDENCE_THRESHOLD=0.7

# Security Settings (Railway deployment)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Logging Settings (Railway compatible)
LOG_LEVEL=INFO
LOG_FILE=/tmp/logs/app.log

# Performance Settings (Railway optimized)
ENABLE_METRICS=true
CACHE_RESPONSES=false
MAX_CONCURRENT_REQUESTS=5  # Reduced for free plan